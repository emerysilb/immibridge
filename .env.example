# ImmiBridge Release Configuration
# Copy this file to .env and fill in your values.
# .env is git-ignored and will not be committed.

# Code signing identity (find yours with: security find-identity -v -p codesigning)
CODESIGN_IDENTITY="Developer ID Application: Your Name (TEAMID)"

# Apple ID email for notarization
APPLE_ID="your-apple-id@email.com"

# Apple Developer Team ID (find at developer.apple.com/account → Membership)
APPLE_TEAM_ID="XXXXXXXXXX"

# App-specific password for notarization (create at appleid.apple.com → App-Specific Passwords)
APPLE_APP_PASSWORD="xxxx-xxxx-xxxx-xxxx"

# Release version
VERSION="1.0.0"

# Sparkle update feed (appcast) URL and public EdDSA key
# Generate keys with Sparkle's generate_keys tool.
SPARKLE_FEED_URL="https://example.com/appcast.xml"
SPARKLE_PUBLIC_KEY="BASE64_PUBLIC_KEY"

# Sparkle private key path (used for appcast generation)
SPARKLE_PRIVATE_KEY="/absolute/path/to/sparkle_private_key.pem"

# GitHub repository slug (owner/repo)
GITHUB_REPO="owner/repo"
